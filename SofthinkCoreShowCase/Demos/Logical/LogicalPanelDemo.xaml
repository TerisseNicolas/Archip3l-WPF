<UserControl x:Class="SofthinkCoreShowCase.Demos.Logical.LogicalPanelDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:SofthinkCoreShowCase.Demos.Logical"
             xmlns:ui="http://SofthinkCore/UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ui:TouchScrollViewer >
        <UniformGrid Rows="2" Columns="2" Width="4000">
            <l:LogicalCanvas x:Name="panel1" Background="Red" TargetPanel="{Binding ElementName=visual}"/>
            <l:LogicalCanvas x:Name="panel2" Background="Blue" TargetPanel="{Binding ElementName=visual}"/>
            <l:LogicalCanvas x:Name="panel3" Background="Green" TargetPanel="{Binding ElementName=visual}"/>
            <l:LogicalCanvas x:Name="panel4" Background="Yellow" TargetPanel="{Binding ElementName=visual}"/>
        </UniformGrid>
        </ui:TouchScrollViewer>
        <l:VisualPanel x:Name="visual"  ClipToBounds="False"/>
    </Grid>
    
</UserControl>
