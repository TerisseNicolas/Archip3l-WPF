<UserControl x:Class="SimpleGesture.GestureCodeBehind"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleGesture"
             xmlns:cmc="clr-namespace:DemoCommon.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="30" x:Name="stack">

            <cmc:Postit x:Name="tap_postit" Text="Tap to Change Color" Margin="30" />

            <cmc:Postit x:Name="hold_postit" Text="Hold to Change Color" Margin="30" />

            <cmc:Postit x:Name="manipulate_postit" Text="Manipulate" Margin="30" />

            <cmc:Postit x:Name="all_postit" Text="Tap, Hold or Manipulate" Margin="30" />

        </StackPanel>
    </Grid>
</UserControl>
